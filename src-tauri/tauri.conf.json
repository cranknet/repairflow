{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "RepairFlow",
    "identifier": "com.repairflow.app",
    "version": "1.0.0",
    "build": {
        "devUrl": "http://localhost:3000",
        "frontendDist": "../.next"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "RepairFlow",
                "width": 1280,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "decorations": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: blob: http://localhost https:; connect-src 'self' http://localhost:* https://fonts.googleapis.com https://fonts.gstatic.com https://api.openai.com https://generativelanguage.googleapis.com https://api.anthropic.com https://api.ocr.space https://api.httpsms.com"
        }
    },
    "plugins": {
        "shell": {
            "open": true
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "msi",
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/icon.ico"
        ],
        "resources": [
            "../prisma/",
            "../public/locales/"
        ],
        "windows": {
            "certificateThumbprint": null,
            "timestampUrl": null,
            "wix": {
                "language": "en-US"
            },
            "nsis": {
                "installerIcon": "icons/icon.ico",
                "headerImage": null,
                "sidebarImage": null,
                "installMode": "currentUser"
            }
        }
    }
}