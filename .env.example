# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database Provider: 'postgresql' (recommended) or 'mysql'
DB_PROVIDER=postgresql

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/repairflow?schema=public"

# MySQL Database URL (if using MySQL)
# DB_PROVIDER=mysql
# DATABASE_URL="mysql://user:password@localhost:3306/repairflow"

# Connection pool size (adjust based on your hosting plan)
# DB_CONNECTION_LIMIT=5

# ===========================================
# AUTHENTICATION
# ===========================================

# NextAuth Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=your-secret-key-here

# Application URL (required for authentication callbacks)
AUTH_URL=http://localhost:3000

# In production, set to your actual domain
BASE_URL=http://localhost:3000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Configuration (can also be configured in app settings)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@repairflow.com
SMTP_FROM_NAME=RepairFlow

# Email Password Encryption Key (generate with: npm run generate-email-key)
EMAIL_ENCRYPTION_KEY=

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable experimental or optional features
FEATURE_AI_VISION=true
FEATURE_PRINTING=true

# ===========================================
# SECURITY
# ===========================================

# Rate Limiting (requests per window)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
