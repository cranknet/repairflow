# Database Provider: 'sqlite' (default) or 'mysql'
DB_PROVIDER=sqlite

# SQLite Database URL (default for development)
DATABASE_URL="file:./prisma/dev.db"

# MySQL Database URL (for production on shared hosting)
# Uncomment and configure for MySQL:
# DB_PROVIDER=mysql
# DATABASE_URL="mysql://user:password@localhost:3306/repairflow"
# DB_CONNECTION_LIMIT=5  # Adjust based on your hosting plan limits

# SMTP Configuration (fallback/default - optional if using database config)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
# Alternative key name (both are supported for backward compatibility)
# SMTP_PASS=your-app-password
SMTP_FROM=noreply@repairflow.com
SMTP_FROM_NAME=RepairFlow

# Email Password Encryption (REQUIRED for database SMTP storage)
# Generate with: npm run generate-email-key
EMAIL_ENCRYPTION_KEY=

# NextAuth
AUTH_SECRET=your-secret-key-here
# In production, set to your actual URL
AUTH_URL=http://localhost:3000

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================

# Application Base URL (required for absolute links, emails, etc.)
# In production, set to your actual domain
BASE_URL=http://localhost:3000

# Feature Flags (set to 'true' or 'false')
# Enable/disable experimental or optional features
FEATURE_AI_VISION=true
FEATURE_PRINTING=true

# Rate Limiting (requests per window)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
