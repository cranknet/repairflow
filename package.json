{
  "name": "repairflow",
  "version": "1.0.0",
  "description": "A comprehensive, open-source repair shop management system",
  "author": "RepairFlow Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cranknet/repairflow.git"
  },
  "bugs": {
    "url": "https://github.com/cranknet/repairflow/issues"
  },
  "homepage": "https://github.com/cranknet/repairflow#readme",
  "keywords": [
    "repair-shop",
    "management-system",
    "nextjs",
    "typescript",
    "prisma",
    "open-source"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && npm run db:push && next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "analyze": "cross-env ANALYZE=true npm run build",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "tsx scripts/reset-data.ts",
    "reset-admin-password": "tsx scripts/reset-admin-password.ts",
    "generate-email-key": "tsx scripts/generate-encryption-key.ts",
    "version:patch": "node scripts/update-version.js patch",
    "version:minor": "node scripts/update-version.js minor",
    "version:major": "node scripts/update-version.js major",
    "version:set": "node scripts/update-version.js set",
    "i18n:scan": "i18next-scanner --config i18next-scanner.config.js",
    "i18n:migrate": "tsx scripts/migrate-i18n.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.0",
    "@heroicons/react": "^2.1.1",
    "@hookform/resolvers": "^3.3.2",
