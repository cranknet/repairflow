{
  "name": "repairflow",
  "version": "1.0.0",
  "description": "A comprehensive, open-source repair shop management system",
  "author": "RepairFlow Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cranknet/repairflow.git"
  },
  "bugs": {
    "url": "https://github.com/cranknet/repairflow/issues"
  },
  "homepage": "https://github.com/cranknet/repairflow#readme",
  "keywords": [
    "repair-shop",
    "management-system",
    "nextjs",
    "typescript",
    "prisma",
    "open-source"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && npm run db:push && next build --webpack",
    "build:turbo": "prisma generate && npm run db:push && next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "jest",
    "test:unit": "jest",
    "test:integration": "jest",
    "test:all": "npm run test && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "load:test": "k6 run load-tests/concurrent-users.js",
    "load:tickets": "k6 run load-tests/ticket-operations.js",
    "analyze": "cross-env ANALYZE=true npm run build",
    "db:push": "prisma db push",
    "db:push:mysql": "prisma db push --schema=prisma/mysql/schema.prisma",
    "db:migrate": "prisma migrate dev",
    "db:migrate:mysql": "prisma migrate dev --schema=prisma/mysql/schema.prisma",
    "db:generate:mysql": "prisma generate --schema=prisma/mysql/schema.prisma",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:studio:mysql": "prisma studio --schema=prisma/mysql/schema.prisma",
    "db:reset": "tsx scripts/reset-data.ts",
    "reset-admin-password": "tsx scripts/reset-admin-password.ts",
    "generate-email-key": "tsx scripts/generate-encryption-key.ts",
    "version:patch": "node scripts/update-version.js patch",
    "version:minor": "node scripts/update-version.js minor",
    "version:major": "node scripts/update-version.js major",
    "version:set": "node scripts/update-version.js set",
    "i18n:scan": "i18next-scanner --config i18next-scanner.config.js",
    "i18n:migrate": "tsx scripts/migrate-i18n.ts",
    "i18n:check": "tsx scripts/i18n-check.ts",
    "i18n:check:strict": "tsx scripts/i18n-check.ts --strict",
    "i18n:report": "tsx scripts/scan-i18n-comprehensive.ts && tsx scripts/generate-i18n-summary.ts",
    "i18n:fix": "tsx scripts/i18n-auto-fix.ts",
    "i18n:fix:auto": "tsx scripts/i18n-auto-fix.ts --auto --missing-only",
    "precommit": "npm run i18n:fix:auto && git add public/locales/"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "@hookform/resolvers": "^3.3.2",
    "@prisma/adapter-mariadb": "^7.1.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-visually-hidden": "^1.2.4",
    "@react-pdf/renderer": "^4.3.1",
    "@serialport/parser-readline": "^12.0.0",
    "@serwist/next": "^9.0.10",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "date-fns": "^3.0.6",
    "file-type": "^21.1.1",
    "i18next": "^25.7.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "mariadb": "^3.4.0",
    "mysql2": "^3.15.3",
    "nanoid": "^5.0.4",
    "next": "^16.0.5",
    "next-auth": "^5.0.0-beta.4",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "qrcode.react": "^3.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.49.2",
    "react-i18next": "^16.4.0",
    "react-image-crop": "^10.1.8",
    "recharts": "^3.5.0",
    "serialport": "^12.0.0",
    "server-only": "^0.0.1",
    "tesseract.js": "^6.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.6",
    "@playwright/test": "^1.57.0",
    "@swc/core": "^1.15.3",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.0.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.5",
    "glob": "^13.0.0",
    "i18next-scanner": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "knip": "^5.72.0",
    "postcss": "^8.4.32",
    "prisma": "^7.1.0",
    "serwist": "^9.0.10",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
