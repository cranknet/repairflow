{
    "appId": "com.repairflow.app",
    "productName": "RepairFlow",
    "directories": {
        "output": "dist",
        "buildResources": "build"
    },
    "files": [
        "electron/**/*",
        "server.js",
        ".next/**/*",
        "public/**/*",
        "prisma/**/*",
        "node_modules/**/*",
        "node_modules/@prisma/client/**/*",
        "package.json",
        "next.config.js",
        "postcss.config.js",
        "tailwind.config.ts"
    ],
    "extraResources": [
        {
            "from": "node_modules/.prisma",
            "to": "node_modules/.prisma",
            "filter": [
                "**/*"
            ]
        }
    ],
    "asar": false,
    "win": {
        "signAndEditExecutable": false,
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "portable",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "public/favicon.png",
        "artifactName": "RepairFlow-${version}-${arch}.${ext}"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "RepairFlow"
    },
    "portable": {
        "artifactName": "RepairFlow-${version}-portable.${ext}"
    },
    "extraMetadata": {
        "main": "electron/main.js"
    }
}